@model MusicStreamingService.Models.AlbumModels.AlbumDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @{  string Image = Model.Image;}
            <img src="@Url.Content(Image)" />
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArtistName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @{ string releaseDate = Model.ReleaseDate.ToString("yyyy-MM-dd");}
            @Html.DisplayFor(model => releaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Length)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Length)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.AlbumId  }) |
    @Html.ActionLink("Back to List", "Index")
</p>
