@model IEnumerable<MusicStreamingService.Models.ArtistsModels.ArtistListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Followers)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.About)
        </td>
        <td>
            @{ string birthday = item.Birthday.ToString("yyyy-MM-dd");}
            @Html.DisplayFor(modelItem => birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Albums)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Followers)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.ArtistId  }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArtistId  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.ArtistId  }) |
            @Html.ActionLink("View Albums", "ArtistAlbums", new {  id=item.ArtistId  }) |
            @Html.ActionLink("View Songs", "ArtistSongs", new {  id=item.ArtistId  })
        </td>
    </tr>
}

</table>
